<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/lbl_regatta"
            android:layout_height="wrap_content"
            android:id="@+id/lblRegatta"
            android:layout_weight="1"
            android:layout_width="150dp" />

        <TextView
            android:text="regatta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtRegatta"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/lbl_serie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblSerie"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spnSerie"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/lbl_class"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblClass"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spnClass"
            android:layout_weight="1" />
    </LinearLayout>

    <CheckBox
        android:text="@string/hide_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chkNoResult" />

    <TextView
        android:text="@string/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblResult"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblPosition"
            android:layout_weight="1"
            android:textStyle="normal|italic" />

        <TextView
            android:text="@string/owner"
            android:layout_height="wrap_content"
            android:id="@+id/lblOwner"
            android:textAlignment="textStart"
            android:textStyle="normal|italic"
            android:layout_width="200dp" />

        <TextView
            android:text="@string/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblTime"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textStyle="normal|italic" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:clickable="false"
        android:id="@+id/lstResult"
        android:layout_height="wrap_content" />

</LinearLayout>